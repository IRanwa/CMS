@{
    ViewBag.Title = "Home Page";
    ViewBag.alertSize = 0;
}
@model FinalProj.Models.Login

<div class="jumbotron Sub-Container">
    @using (Html.BeginForm("Index", "User", FormMethod.Post))
    {
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th colspan="2" style="text-align:center"><h3>Login</h3></th>
            </tr>
            <tr>
                <td>Email: </td>
                <td>
                    @Html.TextBoxFor(m => m.email, new { Style = "width:100%; margin:15px;", Placeholder = "123@gmail.com", type = "email", required = "required", size = "50", maxlength = "50" })
                </td>
            </tr>
            <tr>
                <td>Password: </td>
                <td>
                    @Html.PasswordFor(m => m.pass, new { Style = "width:100%; margin:15px;", Placeholder = "*****", required = "required", maxlength = "12" })
                </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Login" class="Custom-Button" /></td>
            </tr>
        </table>
    }
    Don't have an account? @Html.ActionLink("Registration", "Registration", "User")
</div>
