
@{
    ViewBag.Title = "Registration";
    ViewBag.alertSize = 0;
}
@model FinalProj.Models.Registration

<div class="jumbotron Sub-Container">
    @using (Html.BeginForm("Registration", "User", FormMethod.Post))
    {
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th colspan="2" style="text-align:center"><h3>Registration</h3></th>
            </tr>
            <tr>
                <td>Email: </td>
                <td>
                    @Html.TextBoxFor(m => m.user.email, new { Style = "width:100%; margin:15px;", Placeholder = "123@gmail.com", type = "email", required = "required", size = "50", maxlength = "50" })
                </td>
            </tr>
            <tr>
                <td>Password: </td>
                <td>
                    @Html.PasswordFor(m => m.user.pass, new { Style = "width:100%; margin:15px;", Placeholder = "*****", required = "required", maxlength = "12" })
                </td>
            </tr>
            <tr>
                <td>Confirm Pass: </td>
                <td>
                    @Html.PasswordFor(m => m.user.cPass, new { Style = "width:100%; margin:15px;", Placeholder = "*****", required = "required", maxlength = "12" })
                </td>
            </tr>
            <tr>
                <td>Website Title: </td>
                <td>
                    @Html.TextBoxFor(m => m.webTitle, new { Style = "width:100%; margin:15px;", Placeholder = "Website Title", type = "text", required = "required", maxlength = "30" })
                </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Registration" class="Custom-Button" /></td>
            </tr>
        </table>
    }
</div>

