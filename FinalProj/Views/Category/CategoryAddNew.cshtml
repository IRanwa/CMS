
@{
    ViewBag.Title = "Add New (Category)";
    ViewBag.alertSize = "160px";
}
@model FinalProj.Models.Category
    <style>
        .Sub-Container {
            margin: 0;
            margin-top: 3%;
            padding: 10px 30px;
            float: left;
            background-color: #F7F3F3;
        }
        td{
            font-size:15px;
        }
    </style>
<div style="margin-left:160px">
    <h2>Add New</h2>
    <hr />
    <div class="Sub-Container">
        @using (Html.BeginForm("CategoryAddNew", "Category", FormMethod.Post))
        {
        <table>
            <tr>
                <td>Title: </td>
                <td>
                    @Html.TextBoxFor(m => m.title, new { Style = "width:100%; margin:15px; padding:2px;", Placeholder = "title", type = "text", required = "required", size = "50", maxlength = "50" })
                </td>
            </tr>
            <tr>
                <td>Description: </td>
                <td>
                    @Html.TextAreaFor(m => m.desc, new { Style = "width:100%; margin:15px; padding:2px;", Placeholder = "description", required = "required", rows = "6", maxlength="150" })
                </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Submit" class="Custom-Button" /></td>
            </tr>
        </table>
        }
    </div>
</div>
