@model FinalProj.Models.Website
@{
    ViewBag.Title = "Settings (Image Library)";
    ViewBag.alertSize = "160px";
}
<style>
    .Custom-Button {
        padding: 5px 15px;
    }

    .jumbotron {
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    }
    #update-table {
        width: 100%;
        border-spacing: 10px;
        border-collapse: separate;
    }
</style>
<script>
    function isNumberKey(textbox, evt) {
        var value = 48;
        if (textbox.value.length == 0) {
            value = 49;
        }
        var charCode = (evt.which) ? evt.which : event.keyCode
        if (charCode > 31 && (charCode < value || charCode > 57))
            return false;

        return true;
        
    }
    function checkTextBox(textbox) {
        if (textbox.value == 0) {
            textbox.value = "";
        }
    }
</script>
<div style="margin-left:160px">
    <h2>Image Library Settings</h2>
    <hr />
    <div class="card bg-light" style="max-width:60%; padding:10px 30px; margin:0% 20%;">
        @using (Html.BeginForm("changeImgLibSettings", "Home", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.webID, new { Value = ViewBag.website.webID })
            <h6>Thumbnail Width : </h6>
            @Html.TextBoxFor(m => m.thumbWidth, new {
                @class = "form-control",
                Style = "width:100%;",
                maxlength = "4",
                @required = "true",
                @onkeypress = "return isNumberKey(this,event)",
                @onkeyup = "checkTextBox(this)",
                Value = ViewBag.website.thumbWidth
            })
            <h6>Thumbnail Height : </h6>
            @Html.TextBoxFor(m => m.thumbHeight, new {
                @class = "form-control",
                Style = "width:100%;",
                maxlength = "4",
                @required = "true",
                @onkeypress = "return isNumberKey(this,event)",
                @onkeyup = "checkTextBox(this)",
                Value = ViewBag.website.thumbHeight
            })
            <h6>Medium Width : </h6>
            @Html.TextBoxFor(m => m.mediumWidth, new {
                @class = "form-control",
                Style = "width:100%;",
                maxlength = "4",
                @required = "true",
                @onkeypress = "return isNumberKey(this,event)",
                @onkeyup = "checkTextBox(this)",
                Value = ViewBag.website.mediumWidth
            })
            <h6>Medium Height : </h6>
            @Html.TextBoxFor(m => m.mediumHeight, new {
                @class = "form-control",
                Style = "width:100%;",
                maxlength = "4",
                @required = "true",
                @onkeypress = "return isNumberKey(this,event)",
                @onkeyup = "checkTextBox(this)",
                Value = ViewBag.website.mediumHeight
            })
            <h6>Large Width : </h6>
            @Html.TextBoxFor(m => m.largeWidth, new {
                @class = "form-control",
                Style = "width:100%;",
                maxlength = "4",
                @required = "true",
                @onkeypress = "return isNumberKey(this,event)",
                @onkeyup = "checkTextBox(this)",
                Value = ViewBag.website.largeWidth
            })
            <h6>Large Height : </h6>
            @Html.TextBoxFor(m => m.largeHeight, new {
                @class = "form-control",
                Style = "width:100%;",
                maxlength = "4",
                @required = "true",
                @onkeypress = "return isNumberKey(this,event)",
                @onkeyup = "checkTextBox(this)",
                Value = ViewBag.website.largeHeight
            })
            <input class="btn btn-outline-success" style="float:right" type="submit" value="Save" id="saveBtn" />
        }
    </div>
</div>
